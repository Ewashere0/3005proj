html
    head
        script(type='text/javascript', src="https://kit.fontawesome.com/b004a8c5d5.js", crossorigin="anonymous")
        title Look Inna Book
        style
            include ../../styles/mainStyles.css
            include ../../styles/formStyles.css
    body(class="background")
        include ../partials/layout
        div(class="inputs")
            div(class='loginField')
                i(class='loginIcon fa fa-user')
                input(type='textbox', placeholder='username', id='username', class='editInput')
            br

            div(class='loginField')
                i(class='loginIcon fa fa-lock')
                input(type='password', placeholder='password', id='password', class='editInput')
            br

            div(class='buttons')
                div(class='radioButtons')
                    h3 Account type
                    <label class="radio">
                        <input class='radio' type="radio" name="accountType" value="User" id="user" checked>
                        <span>User</span>
                    <label class="radio">
                        <input type="radio" name="accountType" value="Owner" id="owner">
                        <span>Owner</span>

                button(class='confirmButton', id='register') Register
                    i(class='buttonIcon fa fa-chevron-right')

        script
            include ../../scripts/register.js